@model QuizCraft.Application.ViewModels.EstadisticasQuizViewModel
@using QuizCraft.Application.ViewModels
@{
    ViewData["Title"] = "Estadísticas del Quiz";
    
    // Calcular estadísticas directamente en la vista
    var porcentajeAcierto = Model.TotalPreguntas > 0 
        ? (double)Model.RespuestasCorrectas / Model.TotalPreguntas * 100 
        : 0;
    
    var tiempoPromedioSegundos = Model.TotalPreguntas > 0 
        ? Model.TiempoTotal.TotalSeconds / Model.TotalPreguntas 
        : 0;
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            
            <!-- Encabezado de resultados -->
            <div class="card border-0 shadow mb-4">
                <div class="card-body text-center py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                    <i class="fas fa-trophy mb-3" style="font-size: 4rem;"></i>
                    <h2 class="mb-3">¡Quiz Completado!</h2>
                    <p class="lead mb-0">Has terminado el quiz: @Model.QuizTitulo</p>
                </div>
            </div>

            <!-- Estadísticas principales -->
            <div class="row mb-4">
                <div class="col-md-3 mb-3">
                    <div class="card text-center border-0 shadow-sm h-100">
                        <div class="card-body">
                            <i class="fas fa-layer-group text-primary mb-3" style="font-size: 2rem;"></i>
                            <h3 class="text-primary mb-2">@Model.TotalPreguntas</h3>
                            <p class="text-muted mb-0">Preguntas Totales</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3 mb-3">
                    <div class="card text-center border-0 shadow-sm h-100">
                        <div class="card-body">
                            <i class="fas fa-percentage text-success mb-3" style="font-size: 2rem;"></i>
                            <h3 class="text-success mb-2">@porcentajeAcierto.ToString("F1")%</h3>
                            <p class="text-muted mb-0">Porcentaje de Acierto</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3 mb-3">
                    <div class="card text-center border-0 shadow-sm h-100">
                        <div class="card-body">
                            <i class="fas fa-clock text-info mb-3" style="font-size: 2rem;"></i>
                            <h3 class="text-info mb-2">@Model.TiempoTotal.ToString(@"mm\:ss")</h3>
                            <p class="text-muted mb-0">Tiempo Total</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3 mb-3">
                    <div class="card text-center border-0 shadow-sm h-100">
                        <div class="card-body">
                            <i class="fas fa-tachometer-alt text-warning mb-3" style="font-size: 2rem;"></i>
                            <h3 class="text-warning mb-2">@tiempoPromedioSegundos.ToString("F1")s</h3>
                            <p class="text-muted mb-0">Tiempo Promedio</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Desglose detallado -->
            <div class="row mb-4">
                <!-- Gráfico de resultados -->
                <div class="col-md-6 mb-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-white border-0">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-pie me-2"></i>Resultados del Quiz
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-6">
                                    <div class="p-3">
                                        <i class="fas fa-check-circle text-success mb-2" style="font-size: 2.5rem;"></i>
                                        <h4 class="text-success mb-1">@Model.RespuestasCorrectas</h4>
                                        <small class="text-muted">Correctas</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-3">
                                        <i class="fas fa-times-circle text-danger mb-2" style="font-size: 2.5rem;"></i>
                                        <h4 class="text-danger mb-1">@Model.RespuestasIncorrectas</h4>
                                        <small class="text-muted">Incorrectas</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Información de la sesión -->
                <div class="col-md-6 mb-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-white border-0">
                            <h5 class="mb-0">
                                <i class="fas fa-info-circle me-2"></i>Información de la Sesión
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                    <span class="text-muted">
                                        <i class="fas fa-book me-2"></i>Materia:
                                    </span>
                                    <strong>@Model.MateriaNombre</strong>
                                </div>
                                <div class="d-flex justify-content-between align-items-center py-2">
                                    <span class="text-muted">
                                        <i class="fas fa-hourglass-half me-2"></i>Duración:
                                    </span>
                                    <strong>@Model.TiempoTotal.ToString(@"mm\:ss")</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.PreguntasIncorrectasIds.Any())
            {
                <!-- Información sobre preguntas incorrectas -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white border-0">
                                <h5 class="mb-0">
                                    <i class="fas fa-redo me-2 text-warning"></i>Preguntas para Repasar
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="alert alert-warning mb-0">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>@Model.PreguntasIncorrectasIds.Count pregunta(s) incorrecta(s)</strong><br />
                                    @if (Model.QuizProgramadoId.HasValue)
                                    {
                                        <span>Al marcar como completado, se programará automáticamente un repaso para mañana con <strong>todas las preguntas del quiz</strong> para reforzar tu aprendizaje.</span>
                                    }
                                    else
                                    {
                                        <span>Se recomienda repasar estas preguntas para mejorar tu comprensión del tema.</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Mensaje de felicitación o ánimo -->
            <div class="row mb-4">
                <div class="col-12">
                    @if (porcentajeAcierto >= 80)
                    {
                        <div class="alert alert-success text-center border-0 shadow-sm">
                            <i class="fas fa-star me-2"></i>
                            <strong>¡Excelente trabajo!</strong> Has demostrado un gran dominio del tema.
                        </div>
                    }
                    else if (porcentajeAcierto >= 60)
                    {
                        <div class="alert alert-info text-center border-0 shadow-sm">
                            <i class="fas fa-thumbs-up me-2"></i>
                            <strong>¡Buen trabajo!</strong> Vas por buen camino. Sigue practicando para mejorar.
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center border-0 shadow-sm">
                            <i class="fas fa-graduation-cap me-2"></i>
                            <strong>Sigue practicando!</strong> Con más estudio lograrás mejores resultados.
                        </div>
                    }
                </div>
            </div>

            <!-- Botones de acción -->
            <div class="row">
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center py-4">
                            @if (Model.QuizProgramadoId.HasValue)
                            {
                                <!-- Flujo de repasos programados: mostrar botón de marcar completo -->
                                <form asp-action="MarcarQuizCompletado" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="RepasoId" value="@Model.QuizProgramadoId" />
                                    <button type="submit" class="btn btn-success btn-lg me-2">
                                        <i class="fas fa-check-circle me-2"></i>Marcar como Completado
                                    </button>
                                </form>
                            }
                            <!-- Botón de volver siempre visible -->
                            <a asp-controller="Quiz" asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-home me-2"></i>Volver a Mis Quizzes
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Animaciones al cargar
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    card.style.transition = 'all 0.5s ease';
                    
                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 50);
                }, index * 100);
            });
        });
    </script>

    <style>
        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

        .progress {
            overflow: visible;
        }

        .progress-bar {
            font-weight: bold;
            line-height: 25px;
        }
    </style>
}
