@model IEnumerable<QuizCraft.Application.ViewModels.MateriaViewModel>

@{
    ViewData["Title"] = "Mis Materias - QuizCraft";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <!-- Header Section -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-books me-2"></i>Mis Materias
                    </h2>
                    <p class="text-muted mb-0">Gestiona tus materias de estudio</p>
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>Nueva Materia
                    </a>
                </div>
            </div>

            <!-- Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Materias Grid -->
            @if (Model.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
                    @foreach (var materia in Model)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm border-0" style="border-left: 4px solid @materia.Color !important;">
                                <div class="card-body d-flex flex-column">
                                    <!-- Icono y Nombre -->
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="flex-shrink-0">
                                            <div class="rounded-circle p-3 text-white d-flex align-items-center justify-content-center" 
                                                 style="background-color: @materia.Color; width: 60px; height: 60px;">
                                                <i class="@materia.Icono fa-lg"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h5 class="card-title mb-1 text-truncate" title="@materia.Nombre">
                                                @materia.Nombre
                                            </h5>
                                            <small class="text-muted">
                                                <i class="fas fa-calendar-alt me-1"></i>
                                                @materia.FechaCreacion.ToString("dd/MMM/yyyy")
                                            </small>
                                        </div>
                                    </div>

                                    <!-- Descripción -->
                                    @if (!string.IsNullOrEmpty(materia.Descripcion))
                                    {
                                        <p class="card-text text-muted small mb-3" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                            @materia.Descripcion
                                        </p>
                                    }

                                    <!-- Estadísticas -->
                                    <div class="row text-center mb-3 mt-auto">
                                        <div class="col-6">
                                            <div class="p-2 bg-light rounded">
                                                <div class="fw-bold text-primary">@materia.TotalFlashcards</div>
                                                <small class="text-muted">Flashcards</small>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="p-2 bg-light rounded">
                                                <div class="fw-bold text-success">@materia.TotalQuizzes</div>
                                                <small class="text-muted">Quizzes</small>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Estado -->
                                    <div class="mb-3">
                                        @if (materia.EstaActivo)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-pause me-1"></i>Inactivo
                                            </span>
                                        }
                                    </div>

                                    <!-- Acciones -->
                                    <div class="btn-group w-100 mt-auto" role="group">
                                        <a asp-action="Details" asp-route-id="@materia.Id" 
                                           class="btn btn-outline-primary btn-sm" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@materia.Id" 
                                           class="btn btn-outline-warning btn-sm" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@materia.Id" 
                                           class="btn btn-outline-danger btn-sm" title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-books text-muted" style="font-size: 4rem;"></i>
                    </div>
                    <h4 class="text-muted mb-3">No tienes materias creadas</h4>
                    <p class="text-muted mb-4">
                        Las materias te ayudan a organizar tu contenido de estudio.<br>
                        Crea tu primera materia para comenzar.
                    </p>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>Crear Primera Materia
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });
        });
    </script>
}