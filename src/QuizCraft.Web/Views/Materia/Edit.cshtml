@model QuizCraft.Application.ViewModels.EditMateriaViewModel

@{
    ViewData["Title"] = "Editar Materia - QuizCraft";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Editar Materia
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input asp-for="Id" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Nombre -->
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold">
                                <i class="fas fa-heading me-1"></i>@Html.DisplayNameFor(model => model.Nombre)
                            </label>
                            <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Ej: Matem√°ticas, Historia, Programaci√≥n..." />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Descripci√≥n -->
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold">
                                <i class="fas fa-align-left me-1"></i>@Html.DisplayNameFor(model => model.Descripcion)
                            </label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" 
                                      placeholder="Describe brevemente de qu√© trata esta materia..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>Opcional. M√°ximo 500 caracteres.
                            </div>
                        </div>

                        <!-- Color e Icono en una fila -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Color" class="form-label fw-bold">
                                    <i class="fas fa-palette me-1"></i>@Html.DisplayNameFor(model => model.Color)
                                </label>
                                <div class="input-group">
                                    <input asp-for="Color" type="color" class="form-control form-control-color" title="Selecciona un color" />
                                    <input type="text" class="form-control" id="colorText" readonly />
                                </div>
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Icono" class="form-label fw-bold">
                                    <i class="fas fa-icons me-1"></i>@Html.DisplayNameFor(model => model.Icono)
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text" id="iconPreview">
                                        <i class="@Model.Icono"></i>
                                    </span>
                                    <select asp-for="Icono" class="form-select" id="iconSelect">
                                        <option value="fas fa-book">üìö Libro</option>
                                        <option value="fas fa-calculator">üßÆ Calculadora</option>
                                        <option value="fas fa-flask">üß™ Ciencias</option>
                                        <option value="fas fa-globe">üåç Geograf√≠a</option>
                                        <option value="fas fa-language">üó£Ô∏è Idiomas</option>
                                        <option value="fas fa-paint-brush">üé® Arte</option>
                                        <option value="fas fa-music">üéµ M√∫sica</option>
                                        <option value="fas fa-dumbbell">üí™ Deportes</option>
                                        <option value="fas fa-laptop-code">üíª Programaci√≥n</option>
                                        <option value="fas fa-heartbeat">‚ù§Ô∏è Medicina</option>
                                        <option value="fas fa-balance-scale">‚öñÔ∏è Derecho</option>
                                        <option value="fas fa-chart-line">üìà Econom√≠a</option>
                                        <option value="fas fa-atom">‚öõÔ∏è F√≠sica</option>
                                        <option value="fas fa-leaf">üåø Biolog√≠a</option>
                                        <option value="fas fa-history">üïê Historia</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Icono" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Estado -->
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="EstaActivo" class="form-check-input" type="checkbox" />
                                <label asp-for="EstaActivo" class="form-check-label fw-bold">
                                    <i class="fas fa-toggle-on me-1"></i>@Html.DisplayNameFor(model => model.EstaActivo)
                                </label>
                            </div>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Las materias inactivas no aparecer√°n en el listado principal pero conservar√°n su contenido.
                            </div>
                        </div>

                        <!-- Vista Previa -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="fas fa-eye me-1"></i>Vista Previa
                            </label>
                            <div class="card border-2" id="previewCard" style="border-color: @Model.Color !important;">
                                <div class="card-body text-center p-4">
                                    <div class="rounded-circle p-3 text-white d-inline-flex align-items-center justify-content-center mb-3" 
                                         id="previewIcon" style="background-color: @Model.Color; width: 80px; height: 80px;">
                                        <i class="@Model.Icono fa-2x"></i>
                                    </div>
                                    <h5 class="card-title" id="previewName">@Model.Nombre</h5>
                                    <p class="card-text text-muted" id="previewDescription">@(Model.Descripcion ?? "Descripci√≥n de la materia")</p>
                                    <div id="previewStatus">
                                        @if (Model.EstaActivo)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Activo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-pause me-1"></i>Inactivo
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                                <i class="fas fa-arrow-left me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg text-dark">
                                <i class="fas fa-save me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const colorInput = document.getElementById('Color');
            const colorText = document.getElementById('colorText');
            const iconSelect = document.getElementById('iconSelect');
            const iconPreview = document.getElementById('iconPreview');
            const nameInput = document.getElementById('Nombre');
            const descriptionInput = document.getElementById('Descripcion');
            const activeInput = document.getElementById('EstaActivo');
            
            const previewCard = document.getElementById('previewCard');
            const previewIcon = document.getElementById('previewIcon');
            const previewName = document.getElementById('previewName');
            const previewDescription = document.getElementById('previewDescription');
            const previewStatus = document.getElementById('previewStatus');

            // Actualizar vista previa en tiempo real
            function updatePreview() {
                const color = colorInput.value;
                const icon = iconSelect.value;
                const name = nameInput.value || 'Nombre de la Materia';
                const description = descriptionInput.value || 'Descripci√≥n de la materia';
                const isActive = activeInput.checked;

                // Actualizar colores
                previewCard.style.borderColor = color + ' !important';
                previewIcon.style.backgroundColor = color;
                
                // Actualizar icono
                const iconElement = previewIcon.querySelector('i');
                iconElement.className = icon + ' fa-2x';
                iconPreview.querySelector('i').className = icon;
                
                // Actualizar textos
                previewName.textContent = name;
                previewDescription.textContent = description;
                
                // Actualizar estado
                previewStatus.innerHTML = isActive 
                    ? '<span class="badge bg-success"><i class="fas fa-check me-1"></i>Activo</span>'
                    : '<span class="badge bg-secondary"><i class="fas fa-pause me-1"></i>Inactivo</span>';
                
                // Actualizar color text
                colorText.value = color;
            }

            // Event listeners
            colorInput.addEventListener('input', updatePreview);
            iconSelect.addEventListener('change', updatePreview);
            nameInput.addEventListener('input', updatePreview);
            descriptionInput.addEventListener('input', updatePreview);
            activeInput.addEventListener('change', updatePreview);

            // Inicializar vista previa
            updatePreview();
        });
    </script>
}