@model QuizCraft.Application.ViewModels.MateriaViewModel

@{
    ViewData["Title"] = $"Detalles: {Model.Nombre} - QuizCraft";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <!-- Header con navegación -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item">
                            <a asp-action="Index" class="text-decoration-none">
                                <i class="fas fa-books me-1"></i>Mis Materias
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.Nombre</li>
                    </ol>
                </nav>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i>Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                        <i class="fas fa-trash me-1"></i>Eliminar
                    </a>
                </div>
            </div>

            <!-- Card Principal -->
            <div class="card shadow-lg border-0 mb-4" style="border-left: 6px solid @Model.Color !important;">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="rounded-circle p-4 text-white d-flex align-items-center justify-content-center" 
                                 style="background-color: @Model.Color; width: 100px; height: 100px;">
                                <i class="@Model.Icono fa-3x"></i>
                            </div>
                        </div>
                        <div class="col">
                            <h1 class="display-6 mb-2">@Model.Nombre</h1>
                            @if (!string.IsNullOrEmpty(Model.Descripcion))
                            {
                                <p class="lead text-muted mb-3">@Model.Descripcion</p>
                            }
                            <div class="d-flex flex-wrap gap-2">
                                @if (Model.EstaActivo)
                                {
                                    <span class="badge bg-success fs-6">
                                        <i class="fas fa-check me-1"></i>Activo
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary fs-6">
                                        <i class="fas fa-pause me-1"></i>Inactivo
                                    </span>
                                }
                                <span class="badge bg-primary fs-6">
                                    <i class="fas fa-calendar-alt me-1"></i>
                                    Creado: @Model.FechaCreacion.ToString("dd/MM/yyyy")
                                </span>
                                @if (Model.FechaModificacion.HasValue)
                                {
                                    <span class="badge bg-info fs-6">
                                        <i class="fas fa-edit me-1"></i>
                                        Modificado: @Model.FechaModificacion.Value.ToString("dd/MM/yyyy")
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Estadísticas -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="display-4 text-primary mb-2">
                                <i class="fas fa-layer-group"></i>
                            </div>
                            <h2 class="display-5 text-primary mb-1">@Model.TotalFlashcards</h2>
                            <h6 class="text-muted">Flashcards Creadas</h6>
                            <div class="mt-3">
                                <a href="#" class="btn btn-outline-primary">
                                    <i class="fas fa-eye me-1"></i>Ver Flashcards
                                </a>
                                <a href="#" class="btn btn-primary">
                                    <i class="fas fa-plus me-1"></i>Nueva Flashcard
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="display-4 text-success mb-2">
                                <i class="fas fa-question-circle"></i>
                            </div>
                            <h2 class="display-5 text-success mb-1">@Model.TotalQuizzes</h2>
                            <h6 class="text-muted">Quizzes Creados</h6>
                            <div class="mt-3">
                                <a href="#" class="btn btn-outline-success">
                                    <i class="fas fa-eye me-1"></i>Ver Quizzes
                                </a>
                                <a href="#" class="btn btn-success">
                                    <i class="fas fa-plus me-1"></i>Nuevo Quiz
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acciones Rápidas -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>Acciones Rápidas
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="d-grid">
                                <a href="#" class="btn btn-outline-primary btn-lg">
                                    <i class="fas fa-plus-circle me-2"></i>
                                    <div>Crear Flashcard</div>
                                    <small class="text-muted">Agregar nueva tarjeta de estudio</small>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-grid">
                                <a href="#" class="btn btn-outline-success btn-lg">
                                    <i class="fas fa-question-circle me-2"></i>
                                    <div>Crear Quiz</div>
                                    <small class="text-muted">Nuevo cuestionario de práctica</small>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="d-grid">
                                <a href="#" class="btn btn-outline-info btn-lg">
                                    <i class="fas fa-chart-bar me-2"></i>
                                    <div>Ver Estadísticas</div>
                                    <small class="text-muted">Progreso y rendimiento</small>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información Adicional -->
            @if (!Model.EstaActivo)
            {
                <div class="alert alert-warning mt-4" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Materia Inactiva:</strong> 
                    Esta materia está marcada como inactiva. No aparecerá en el listado principal pero su contenido se mantiene intacto.
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="alert-link">Activar materia</a>
                </div>
            }

            @if (Model.TotalFlashcards == 0 && Model.TotalQuizzes == 0)
            {
                <div class="alert alert-info mt-4" role="alert">
                    <i class="fas fa-lightbulb me-2"></i>
                    <strong>¡Comienza a crear contenido!</strong> 
                    Esta materia aún no tiene flashcards ni quizzes. Usa las acciones rápidas de arriba para comenzar a agregar contenido educativo.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Función para los enlaces temporales
        document.addEventListener('DOMContentLoaded', function() {
            const tempLinks = document.querySelectorAll('a[href="#"]');
            tempLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    alert('Esta funcionalidad estará disponible cuando implementemos Flashcards y Quizzes.');
                });
            });
        });
    </script>
}