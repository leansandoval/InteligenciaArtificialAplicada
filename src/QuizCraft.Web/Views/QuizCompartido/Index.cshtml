@model QuizCraft.Application.ViewModels.QuizzesCompartidosViewModel
@{
    ViewData["Title"] = "Quizzes Compartidos";
}

<div class="container-fluid my-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-share-alt text-primary me-2"></i>
                    Quizzes Compartidos
                </h2>
                <a asp-controller="Quiz" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>
                    Volver a Mis Quizzes
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (ViewBag.MostrarExito == true && ViewBag.CodigoCompartido != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <h5 class="alert-heading">
                        <i class="fas fa-check-circle me-2"></i>
                        ¡Código de Compartición Generado!
                    </h5>
                    <hr>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Código de Compartición:</label>
                        <div class="input-group">
                            <input type="text" class="form-control" value="@ViewBag.CodigoCompartido" readonly id="codigoGenerado">
                            <button class="btn btn-outline-primary" type="button" onclick="copiarAlPortapapeles()">
                                <i class="fas fa-copy me-1"></i> Copiar
                            </button>
                        </div>
                    </div>
                    @if (ViewBag.UrlCompartir != null)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">URL para Importar:</label>
                            <div class="input-group">
                                <input type="text" class="form-control" value="@ViewBag.UrlCompartir" readonly id="urlGenerada">
                                <button class="btn btn-outline-primary" type="button" onclick="copiarUrl()">
                                    <i class="fas fa-copy me-1"></i> Copiar
                                </button>
                            </div>
                        </div>
                    }
                    <p class="mb-0">
                        <i class="fas fa-info-circle me-1"></i>
                        Comparte este código con otros usuarios para que puedan importar tu quiz.
                    </p>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Tabs para separar Compartidos e Importados -->
            <ul class="nav nav-tabs mb-4" id="quizTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="compartidos-tab" data-bs-toggle="tab" data-bs-target="#compartidos" type="button" role="tab">
                        <i class="fas fa-share me-1"></i>
                        Mis Quizzes Compartidos (@Model.QuizzesCompartidos.Count())
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="importados-tab" data-bs-toggle="tab" data-bs-target="#importados" type="button" role="tab">
                        <i class="fas fa-download me-1"></i>
                        Quizzes Importados (@Model.QuizzesImportados.Count())
                    </button>
                </li>
            </ul>

            <div class="tab-content" id="quizTabContent">
                <!-- Tab: Quizzes Compartidos -->
                <div class="tab-pane fade show active" id="compartidos" role="tabpanel">
                    @if (!Model.QuizzesCompartidos.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            No has compartido ningún quiz todavía. Puedes compartir un quiz desde la lista de tus quizzes.
                        </div>
                    }
                    else
                    {
                        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                            @foreach (var compartido in Model.QuizzesCompartidos)
                            {
                                <div class="col">
                                    <div class="card h-100 shadow-sm">
                                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                            <h5 class="card-title mb-0">@compartido.TituloQuiz</h5>
                                            @if (compartido.EstaExpirado)
                                            {
                                                <span class="badge bg-danger">Expirado</span>
                                            }
                                            else if (compartido.EstaAgotado)
                                            {
                                                <span class="badge bg-warning text-dark">Agotado</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Activo</span>
                                            }
                                        </div>
                                        <div class="card-body">
                                            <p class="mb-2">
                                                <i class="fas fa-book text-muted me-2"></i>
                                                <strong>Materia:</strong> @compartido.NombreMateria
                                            </p>
                                            <p class="mb-2">
                                                <i class="fas fa-signal text-muted me-2"></i>
                                                <strong>Dificultad:</strong> @compartido.Dificultad
                                            </p>
                                            <p class="mb-2">
                                                <i class="fas fa-question text-muted me-2"></i>
                                                <strong>Preguntas:</strong> @compartido.NumeroPreguntas
                                            </p>
                                            <hr>
                                            <div class="mb-3">
                                                <label class="form-label fw-bold">Código de Compartición:</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control font-monospace" value="@compartido.Codigo" readonly id="codigo-@compartido.Id">
                                                    <button class="btn btn-outline-secondary" type="button" onclick="copiarCodigo('@compartido.Codigo', this)">
                                                        <i class="fas fa-copy"></i>
                                                    </button>
                                                </div>
                                                <small class="text-muted">Comparte este código con otros usuarios</small>
                                            </div>
                                            <p class="mb-2">
                                                <i class="fas fa-calendar text-muted me-2"></i>
                                                <strong>Creado:</strong> @compartido.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                                            </p>
                                            @if (compartido.FechaExpiracion.HasValue)
                                            {
                                                <p class="mb-2">
                                                    <i class="fas fa-clock text-muted me-2"></i>
                                                    <strong>Expira:</strong> @compartido.FechaExpiracion.Value.ToString("dd/MM/yyyy HH:mm")
                                                </p>
                                            }
                                            else
                                            {
                                                <p class="mb-2">
                                                    <i class="fas fa-infinity text-muted me-2"></i>
                                                    <strong>Sin fecha de expiración</strong>
                                                </p>
                                            }
                                            <p class="mb-2">
                                                <i class="fas fa-users text-muted me-2"></i>
                                                <strong>Usos:</strong> @compartido.VecesUsado
                                                @if (compartido.MaximoUsos.HasValue)
                                                {
                                                    <text> / @compartido.MaximoUsos.Value</text>
                                                }
                                                else
                                                {
                                                    <text> (ilimitado)</text>
                                                }
                                            </p>
                                        </div>
                                        <div class="card-footer bg-transparent">
                                            <div class="d-flex justify-content-between">
                                                <a asp-controller="Quiz" asp-action="Details" asp-route-id="@compartido.QuizId" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye me-1"></i>
                                                    Ver Quiz
                                                </a>
                                                <form asp-action="Revocar" asp-route-id="@compartido.Id" method="post" class="d-inline" onsubmit="return confirm('¿Estás seguro de que deseas revocar esta compartición?');">
                                                    <button type="submit" class="btn btn-sm btn-danger">
                                                        <i class="fas fa-times me-1"></i>
                                                        Revocar
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>

                <!-- Tab: Quizzes Importados -->
                <div class="tab-pane fade" id="importados" role="tabpanel">
                    @if (!Model.QuizzesImportados.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            No has importado ningún quiz todavía. Puedes importar un quiz usando un código compartido.
                            <div class="mt-3">
                                <a asp-action="Importar" class="btn btn-primary">
                                    <i class="fas fa-download me-1"></i>
                                    Importar Quiz
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <a asp-action="Importar" class="btn btn-primary">
                                <i class="fas fa-download me-1"></i>
                                Importar Otro Quiz
                            </a>
                        </div>
                        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                            @foreach (var importado in Model.QuizzesImportados)
                            {
                                <div class="col">
                                    <div class="card h-100 shadow-sm">
                                        <div class="card-header bg-success text-white">
                                            <h5 class="card-title mb-0">@importado.TituloQuiz</h5>
                                        </div>
                                        <div class="card-body">
                                            <p class="mb-2">
                                                <i class="fas fa-book text-muted me-2"></i>
                                                <strong>Materia:</strong> @importado.NombreMateria
                                            </p>
                                            <p class="mb-2">
                                                <i class="fas fa-signal text-muted me-2"></i>
                                                <strong>Dificultad:</strong> @importado.Dificultad
                                            </p>
                                            <p class="mb-2">
                                                <i class="fas fa-question text-muted me-2"></i>
                                                <strong>Preguntas:</strong> @importado.NumeroPreguntas
                                            </p>
                                            <hr>
                                            <p class="mb-2">
                                                <i class="fas fa-user text-muted me-2"></i>
                                                <strong>Compartido por:</strong> @importado.NombrePropietarioOriginal
                                            </p>
                                            <p class="mb-2">
                                                <i class="fas fa-calendar text-muted me-2"></i>
                                                <strong>Importado:</strong> @importado.FechaImportacion.ToString("dd/MM/yyyy HH:mm")
                                            </p>
                                        </div>
                                        <div class="card-footer bg-transparent">
                                            <div class="d-flex justify-content-between">
                                                <a asp-controller="Quiz" asp-action="Details" asp-route-id="@importado.QuizId" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye me-1"></i>
                                                    Ver Quiz
                                                </a>
                                                <a asp-controller="Quiz" asp-action="PlayQuiz" asp-route-id="@importado.QuizId" class="btn btn-sm btn-success">
                                                    <i class="fas fa-play me-1"></i>
                                                    Jugar
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Debug: Mostrar valores de ViewBag en consola
        console.log('=== DEBUG INDEX VIEW ===');
        console.log('ViewBag.MostrarExito:', @Json.Serialize(ViewBag.MostrarExito));
        console.log('ViewBag.CodigoCompartido:', '@ViewBag.CodigoCompartido');
        console.log('ViewBag.UrlCompartir:', '@ViewBag.UrlCompartir');
        console.log('URL actual:', window.location.href);
        console.log('========================');
        
        function copiarCodigo(codigo, button) {
            navigator.clipboard.writeText(codigo).then(function() {
                // Cambiar icono temporalmente
                const icon = button.querySelector('i');
                const originalClass = icon.className;
                icon.className = 'fas fa-check text-success';
                
                // Restaurar después de 2 segundos
                setTimeout(function() {
                    icon.className = originalClass;
                }, 2000);
            }).catch(function(err) {
                console.error('Error al copiar:', err);
            });
        }

        function copiarAlPortapapeles() {
            const input = document.getElementById('codigoGenerado');
            input.select();
            navigator.clipboard.writeText(input.value).then(function() {
                alert('¡Código copiado al portapapeles!');
            }).catch(function(err) {
                console.error('Error al copiar:', err);
                alert('Error al copiar el código');
            });
        }

        function copiarUrl() {
            const input = document.getElementById('urlGenerada');
            input.select();
            navigator.clipboard.writeText(input.value).then(function() {
                alert('¡URL copiada al portapapeles!');
            }).catch(function(err) {
                console.error('Error al copiar:', err);
                alert('Error al copiar la URL');
            });
        }
    </script>
}
