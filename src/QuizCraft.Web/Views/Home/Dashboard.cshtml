@model object

@{
    ViewData["Title"] = "Dashboard - QuizCraft";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <!-- Header de Bienvenida -->
            <div class="jumbotron bg-gradient-primary text-white rounded p-5 mb-4">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h1 class="display-4 fw-bold">
                            ¡Bienvenido de vuelta, @User.Identity!.Name!
                        </h1>
                        <p class="lead mb-4">
                            Tu centro de aprendizaje personalizado. Gestiona tus materias, 
                            estudia con flashcards y practica con quizzes.
                        </p>
                        <div class="d-flex flex-wrap gap-2">
                            <a asp-controller="Materia" asp-action="Index" class="btn btn-light btn-lg">
                                <i class="fas fa-books me-2"></i>Mis Materias
                            </a>
                            <a asp-controller="Materia" asp-action="Create" class="btn btn-outline-light btn-lg">
                                <i class="fas fa-plus me-2"></i>Nueva Materia
                            </a>
                        </div>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="display-1 opacity-75">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Estadísticas Rápidas -->
            <div class="row mb-4">
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center">
                            <div class="display-4 text-primary mb-2">
                                <i class="fas fa-books"></i>
                            </div>
                            <h3 class="text-primary mb-1">0</h3>
                            <p class="text-muted mb-0">Materias</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center">
                            <div class="display-4 text-success mb-2">
                                <i class="fas fa-layer-group"></i>
                            </div>
                            <h3 class="text-success mb-1">0</h3>
                            <p class="text-muted mb-0">Flashcards</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center">
                            <div class="display-4 text-warning mb-2">
                                <i class="fas fa-question-circle"></i>
                            </div>
                            <h3 class="text-warning mb-1">0</h3>
                            <p class="text-muted mb-0">Quizzes</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body text-center">
                            <div class="display-4 text-info mb-2">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <h3 class="text-info mb-1">0%</h3>
                            <p class="text-muted mb-0">Progreso</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acciones Rápidas -->
            <div class="row mb-4">
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">
                                <i class="fas fa-bolt me-2 text-primary"></i>Acciones Rápidas
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="d-grid">
                                        <a asp-controller="Materia" asp-action="Create" class="btn btn-outline-primary btn-lg">
                                            <i class="fas fa-plus-circle me-2"></i>
                                            <div class="fw-bold">Crear Materia</div>
                                            <small class="text-muted">Organiza tu nuevo tema de estudio</small>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-grid">
                                        <a href="#" class="btn btn-outline-success btn-lg">
                                            <i class="fas fa-layer-group me-2"></i>
                                            <div class="fw-bold">Crear Flashcard</div>
                                            <small class="text-muted">Nueva tarjeta de estudio</small>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-grid">
                                        <a href="#" class="btn btn-outline-warning btn-lg">
                                            <i class="fas fa-question-circle me-2"></i>
                                            <div class="fw-bold">Crear Quiz</div>
                                            <small class="text-muted">Nuevo cuestionario de práctica</small>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-grid">
                                        <a href="#" class="btn btn-outline-info btn-lg">
                                            <i class="fas fa-play me-2"></i>
                                            <div class="fw-bold">Sesión de Estudio</div>
                                            <small class="text-muted">Practica con flashcards</small>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white">
                            <h5 class="mb-0">
                                <i class="fas fa-clock me-2 text-success"></i>Actividad Reciente
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-2x mb-3 opacity-50"></i>
                                <p class="mb-0">No hay actividad reciente</p>
                                <small>¡Comienza creando tu primera materia!</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Materias Recientes -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-books me-2 text-primary"></i>Mis Materias
                    </h5>
                    <a asp-controller="Materia" asp-action="Index" class="btn btn-sm btn-outline-primary">
                        Ver todas <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
                <div class="card-body">
                    <div class="text-center text-muted py-5">
                        <i class="fas fa-books fa-3x mb-3 opacity-50"></i>
                        <h6 class="mb-2">No tienes materias creadas</h6>
                        <p class="mb-3">Las materias te ayudan a organizar tu contenido de estudio por temas.</p>
                        <a asp-controller="Materia" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Crear Primera Materia
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    }
    
    .jumbotron {
        border: none;
        box-shadow: 0 10px 30px rgba(0, 123, 255, 0.2);
    }
    
    .card {
        transition: transform 0.2s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
</style>

@section Scripts {
    <script>
        // Función para los enlaces temporales
        document.addEventListener('DOMContentLoaded', function() {
            const tempLinks = document.querySelectorAll('a[href="#"]');
            tempLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    alert('Esta funcionalidad estará disponible pronto. Por ahora puedes gestionar tus materias.');
                });
            });
        });
    </script>
}