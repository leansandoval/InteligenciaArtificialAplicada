@model ConfigurarRepasoViewModel
@using QuizCraft.Application.ViewModels
@{
    ViewData["Title"] = "Configurar Repaso";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="fas fa-brain me-3"></i>
                    <h4 class="mb-0">Configurar Sesión de Repaso</h4>
                </div>
                <div class="card-body">
                    
                    @if (Model.TotalFlashcardsDisponibles == 0)
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>¡No hay flashcards disponibles para repaso!</strong>
                            <p class="mb-0 mt-2">
                                Todas tus flashcards están al día. ¡Vuelve mañana para continuar repasando!
                            </p>
                        </div>
                        <div class="text-center">
                            <a asp-action="Index" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-left me-2"></i>Volver a Flashcards
                            </a>
                        </div>
                    }
                    else
                    {
                        <form asp-action="IniciarRepaso" method="post">
                            <div class="row">
                                <!-- Columna izquierda: Configuración -->
                                <div class="col-md-6">
                                    <h5 class="text-primary mb-3">
                                        <i class="fas fa-cog me-2"></i>Configuración del Repaso
                                    </h5>
                                    
                                    <div class="mb-3">
                                        <label asp-for="MateriaId" class="form-label">Materia</label>
                                        <select asp-for="MateriaId" class="form-select" id="materiaSelect">
                                            <option value="">Todas las materias (@Model.TotalFlashcardsDisponibles flashcards)</option>
                                            @foreach (var materia in Model.MateriasDisponibles)
                                            {
                                                <option value="@materia.Id" data-cantidad="@materia.CantidadFlashcards">
                                                    @materia.Nombre (@materia.CantidadFlashcards flashcards)
                                                </option>
                                            }
                                        </select>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label asp-for="MaximoFlashcards" class="form-label">
                                            Número de flashcards 
                                            <span class="text-muted">(máximo disponible: <span id="maxDisponible">@Model.TotalFlashcardsDisponibles</span>)</span>
                                        </label>
                                        <input asp-for="MaximoFlashcards" type="number" class="form-control" 
                                               min="1" max="@Model.TotalFlashcardsDisponibles" 
                                               value="@(Math.Min(20, Model.TotalFlashcardsDisponibles))" />
                                        <div class="form-text">
                                            Se seleccionarán las flashcards que más necesites repasar
                                        </div>
                                        <span asp-validation-for="MaximoFlashcards" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="MezclarOrden" class="form-label">Configuración adicional</label>
                                        <div class="form-check">
                                            <input asp-for="MezclarOrden" type="checkbox" class="form-check-input" id="mezclarOrden" />
                                            <label class="form-check-label" for="mezclarOrden">
                                                <i class="fas fa-shuffle me-1"></i>Mezclar orden de las flashcards
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <!-- Columna derecha: Información -->
                                <div class="col-md-6">
                                    <h5 class="text-info mb-3">
                                        <i class="fas fa-info-circle me-2"></i>Información del Repaso
                                    </h5>
                                    
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h6 class="card-title text-primary">
                                                <i class="fas fa-lightbulb me-2"></i>¿Cómo funciona?
                                            </h6>
                                            <ul class="mb-0">
                                                <li>Se priorizan las flashcards que más necesitas repasar</li>
                                                <li>Cada respuesta ajusta la frecuencia de repaso</li>
                                                <li>Responder "Fácil" espaciará más el próximo repaso</li>
                                                <li>Responder "Difícil" hará que aparezca antes</li>
                                            </ul>
                                        </div>
                                    </div>

                                    <div class="card bg-primary bg-opacity-10 mt-3">
                                        <div class="card-body">
                                            <h6 class="card-title text-primary">
                                                <i class="fas fa-chart-line me-2"></i>Tu Progreso
                                            </h6>
                                            <div class="row text-center">
                                                <div class="col-12">
                                                    <div class="fw-bold text-success">@Model.TotalFlashcardsDisponibles</div>
                                                    <small class="text-muted">Flashcards Disponibles para Repaso</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-4">
                                <div class="col-12">
                                    <div class="d-flex justify-content-between">
                                        <a asp-action="Index" class="btn btn-outline-secondary">
                                            <i class="fas fa-arrow-left me-2"></i>Cancelar
                                        </a>
                                        <button type="submit" class="btn btn-primary btn-lg">
                                            <i class="fas fa-play me-2"></i>Iniciar Repaso
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Actualizar cantidad máxima disponible cuando cambia la materia
        document.getElementById('materiaSelect').addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            const cantidad = selectedOption.dataset.cantidad || @Model.TotalFlashcardsDisponibles;
            
            document.getElementById('maxDisponible').textContent = cantidad;
            
            const maxInput = document.querySelector('input[name="MaximoFlashcards"]');
            maxInput.max = cantidad;
            
            if (parseInt(maxInput.value) > parseInt(cantidad)) {
                maxInput.value = cantidad;
            }
        });

        @if (ViewBag.EsRepasoProgamado == true)
        {
            @:// Auto-envío para repaso programado
            @:document.addEventListener('DOMContentLoaded', function() {
            @:    const form = document.querySelector('form');
            @:    const alert = document.createElement('div');
            @:    alert.className = 'alert alert-info mb-3';
            @:    alert.innerHTML = '<i class="fas fa-calendar-check me-2"></i>Iniciando repaso programado<br><small>Se enviará automáticamente en <span id="countdown">1</span> segundo.</small>';
            @:    form.parentNode.insertBefore(alert, form);
            @:    
            @:    let timeLeft = 1;
            @:    const countdownElement = document.getElementById('countdown');
            @:    
            @:    const countdownInterval = setInterval(function() {
            @:        timeLeft--;
            @:        countdownElement.textContent = timeLeft;
            @:        if (timeLeft <= 0) {
            @:            clearInterval(countdownInterval);
            @:            form.submit();
            @:        }
            @:    }, 1000);
            @:});
        }
    </script>
}