@model EstadisticasRepasoViewModel
@using QuizCraft.Application.ViewModels
@{
    ViewData["Title"] = "Estadísticas del Repaso";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            
            <!-- Encabezado de resultados -->
            <div class="card border-0 shadow mb-4">
                <div class="card-body text-center py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                    <i class="fas fa-trophy mb-3" style="font-size: 4rem;"></i>
                    <h2 class="mb-3">¡Sesión de Repaso Completada!</h2>
                    <p class="lead mb-0">Has terminado tu sesión de repaso de @Model.MateriaNombre</p>
                </div>
            </div>

            <!-- Estadísticas principales -->
            <div class="row mb-4">
                <div class="col-md-3 mb-3">
                    <div class="card text-center border-0 shadow-sm h-100">
                        <div class="card-body">
                            <i class="fas fa-layer-group text-primary mb-3" style="font-size: 2rem;"></i>
                            <h3 class="text-primary mb-2">@Model.FlashcardsRevisadas</h3>
                            <p class="text-muted mb-0">Flashcards Revisadas</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3 mb-3">
                    <div class="card text-center border-0 shadow-sm h-100">
                        <div class="card-body">
                            <i class="fas fa-percentage text-success mb-3" style="font-size: 2rem;"></i>
                            <h3 class="text-success mb-2">@Model.PorcentajeAcierto.ToString("F1")%</h3>
                            <p class="text-muted mb-0">Porcentaje de Acierto</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3 mb-3">
                    <div class="card text-center border-0 shadow-sm h-100">
                        <div class="card-body">
                            <i class="fas fa-clock text-info mb-3" style="font-size: 2rem;"></i>
                            <h3 class="text-info mb-2">@Model.TiempoTotal.ToString(@"mm\:ss")</h3>
                            <p class="text-muted mb-0">Tiempo Total</p>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3 mb-3">
                    <div class="card text-center border-0 shadow-sm h-100">
                        <div class="card-body">
                            <i class="fas fa-tachometer-alt text-warning mb-3" style="font-size: 2rem;"></i>
                            <h3 class="text-warning mb-2">@Model.TiempoPromedioRespuesta.ToString("F1")s</h3>
                            <p class="text-muted mb-0">Tiempo Promedio</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Desglose detallado -->
            <div class="row mb-4">
                <!-- Gráfico de resultados -->
                <div class="col-md-6 mb-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-white border-0">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-pie me-2"></i>Resultados del Repaso
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-6">
                                    <div class="p-3">
                                        <i class="fas fa-check-circle text-success mb-2" style="font-size: 2.5rem;"></i>
                                        <h4 class="text-success mb-1">@Model.FlashcardsCorrectas</h4>
                                        <small class="text-muted">Correctas</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-3">
                                        <i class="fas fa-times-circle text-danger mb-2" style="font-size: 2.5rem;"></i>
                                        <h4 class="text-danger mb-1">@Model.FlashcardsIncorrectas</h4>
                                        <small class="text-muted">Incorrectas</small>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Barra de progreso visual -->
                            <div class="mt-3">
                                @{
                                    var porcentajeCorrectas = Model.FlashcardsRevisadas > 0 ? (double)Model.FlashcardsCorrectas / Model.FlashcardsRevisadas * 100 : 0;
                                    var porcentajeIncorrectas = 100 - porcentajeCorrectas;
                                }
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar bg-success" role="progressbar" 
                                         style="width: @porcentajeCorrectas%" 
                                         title="@porcentajeCorrectas.ToString("F1")% Correctas"></div>
                                    <div class="progress-bar bg-danger" role="progressbar" 
                                         style="width: @porcentajeIncorrectas%" 
                                         title="@porcentajeIncorrectas.ToString("F1")% Incorrectas"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Próximas revisiones -->
                <div class="col-md-6 mb-3">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-white border-0">
                            <h5 class="mb-0">
                                <i class="fas fa-calendar-alt me-2"></i>Próximas Revisiones
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <i class="fas fa-sun text-warning me-2"></i>
                                    <span>Mañana</span>
                                </div>
                                <span class="badge bg-warning rounded-pill">@Model.FlashcardsParaManana flashcards</span>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <i class="fas fa-calendar-week text-info me-2"></i>
                                    <span>Esta semana</span>
                                </div>
                                <span class="badge bg-info rounded-pill">@Model.FlashcardsParaSiguienteSemana flashcards</span>
                            </div>
                            
                            <div class="mt-4 p-3 bg-light rounded">
                                <small class="text-muted">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Las flashcards incorrectas se reprogramaron para mañana,
                                    mientras que las correctas siguen el algoritmo de repetición espaciada.
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información de la sesión -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>Información de la Sesión
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <strong>Materia:</strong>
                            <div class="mt-1">
                                <i class="fas fa-book me-2" style="color: @Model.MateriaColor;"></i>
                                @Model.MateriaNombre
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <strong>Inicio:</strong>
                            <div class="mt-1">@Model.FechaInicio.ToString("HH:mm")</div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <strong>Finalización:</strong>
                            <div class="mt-1">@(Model.FechaFin?.ToString("HH:mm") ?? "En curso")</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Motivación y consejos -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body text-center py-4">
                    @if (Model.PorcentajeAcierto >= 80)
                    {
                        <i class="fas fa-star text-warning mb-3" style="font-size: 3rem;"></i>
                        <h4 class="text-success mb-3">¡Excelente trabajo!</h4>
                        <p class="text-muted mb-0">
                            Tu rendimiento es sobresaliente. Continúa con este nivel de estudio para mantener 
                            el conocimiento fresco en tu memoria.
                        </p>
                    }
                    else if (Model.PorcentajeAcierto >= 60)
                    {
                        <i class="fas fa-thumbs-up text-success mb-3" style="font-size: 3rem;"></i>
                        <h4 class="text-info mb-3">¡Buen progreso!</h4>
                        <p class="text-muted mb-0">
                            Vas por buen camino. Las flashcards incorrectas aparecerán más frecuentemente 
                            para ayudarte a mejorar.
                        </p>
                    }
                    else
                    {
                        <i class="fas fa-seedling text-success mb-3" style="font-size: 3rem;"></i>
                        <h4 class="text-warning mb-3">¡Sigue practicando!</h4>
                        <p class="text-muted mb-0">
                            Cada sesión de repaso te acerca más al dominio del material. 
                            Las repeticiones frecuentes fortalecerán tu memoria.
                        </p>
                    }
                </div>
            </div>

            <!-- Acciones -->
            <div class="text-center">
                <a asp-action="ConfigurarRepaso" class="btn btn-primary btn-lg me-3">
                    <i class="fas fa-redo me-2"></i>Nuevo Repaso
                </a>
                <a asp-action="Index" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-list me-2"></i>Ver Flashcards
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        
        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 25px rgba(0,0,0,0.15) !important;
        }
        
        .progress {
            border-radius: 10px;
            overflow: hidden;
        }
        
        .progress-bar {
            transition: width 0.8s ease;
        }
        
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .card {
            animation: fadeInUp 0.6s ease forwards;
        }
        
        .card:nth-child(2) { animation-delay: 0.1s; }
        .card:nth-child(3) { animation-delay: 0.2s; }
        .card:nth-child(4) { animation-delay: 0.3s; }
    </style>
}